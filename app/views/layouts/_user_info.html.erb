    <div class="col-3">
      <h1>User info</h1>
      <%= image_tag user.get_profile_image(200,200) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="mt-5">
        <%= link_to edit_user_path(user.id),class:"btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <h1>New book</h1>
      <div class="form-group">
        <%= form_with model: book do |f| %>
          <%= f.label :title %><br>
          <%= f.text_field :title ,class:"form-control" %><br>
          <%= f.label :body, "Opinion" %><br>
          <%= f.text_area :body, class:"form-control" %><br>
          <%= f.submit "Create Book" ,class:"btn btn-success" %>
        <% end %>
      </div>
      
    </div>