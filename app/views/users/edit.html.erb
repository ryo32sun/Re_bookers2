<div class="container">
  <div class="row">
    <div class="col-11 col-sm-10 col-md-8 col-xl-6 mx-auto">
      <h1>User info</h1>
      <%= render "layouts/errors" , obj: @user %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, autocomplete: "name", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image , "Image" %><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, autocomplete: "introduction", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>