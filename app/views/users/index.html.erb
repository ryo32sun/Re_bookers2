<div class="container">
  <div class="row">
    <%= render "layouts/user_info" , user: @user , book: @book %>
    <div class="col-8 offset-md-1">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th><%= image_tag user.get_profile_image(100,100) %></th>
              <th><%= user.name %></th>
              <th><%= link_to "Show" , user_path(user.id) %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>