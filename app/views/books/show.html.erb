<div class="container">
    <div class="row">
        <%= render "layouts/user_info" , user: @book.user , book: Book.new %>
        <div class="col-8 offset-1">
            <h1>Book detail</h1>
            <table class="table">
                <tbody>
                    <%# @books.each do |book| %>
                        <tr>
                            <td>
                                <%= link_to  user_path(@book.user.id) do %>
                                    <%= image_tag  @book.user.get_profile_image(100,100) %><br>
                                    <%= @book.user.name %>
                                    <!--<p>たい</p>-->
                                <% end %>
                            </td>
                            <td>
                                <%= link_to  book_path(@book.id) do %>
                                    <%= @book.title %>
                                <% end %>
                            </td>
                            <td>
                                <%= @book.body %>
                            </td>
                            <td>
                                <%= link_to "Edit" , edit_book_path(@book.id) ,class:"btn btn-success" %>
                            </td>
                            <td>
                                <%= link_to "Destroy", book_path(@book.id) , method: :delete , "data-confirm" => "本当に削除しますか" ,class:"btn btn-danger" %>
                            </td>
                        </tr>
                    <%# end %>
                </tbody>
            </table>
        </div>
    </div>
</div>